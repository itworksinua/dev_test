{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "esnext",
    "outDir": "tmp/build",
  },
  "files": [
    "index.ts",
  ],
  "include": [
    "src/modules.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js"],
  "reference": {
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true
  }
}
